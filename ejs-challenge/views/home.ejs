<h1>Home</h1>


<p><%= homeContent %></p>

<% posts.forEach(function(post){ %>


    <p> <h2><%=post.title%></h2> </p>

    <% if (post.bodyContent.length > 100 ) { %>

    <p><%= post.bodyContent.substring(0, 100) + "..." %> 
        <a href="/posts/<%=post.title%>"> Read More...</a></p>

    <% } else {  %>

    <p><%= post.bodyContent %>
        <a href="/posts/<%=post.title%>"> Read More...</a> </p>

    <% } %>


<%})%>




